<Page x:Class="AdmissionDocsSystem.Views.Pages.AdminPages.ApplicantsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdmissionDocsSystem.Views.Pages.AdminPages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicantsListPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список абитуриентов" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        <Button HorizontalAlignment="Right" Width="150" Content="Обновить" x:Name="UpdateData" Click="UpdateData_Click" Margin="10">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <DataGrid x:Name="ApplicantsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="20" ColumnWidth="*" IsReadOnly="True" SelectionChanged="ApplicantsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ApplicantID}" Width="Auto"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding DateOfBirth, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Электронная почта" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}" Width="*"/>
                <!--<DataGridTextColumn Header="Адрес регистрации" Binding="{Binding RegistrationAddress}" Width="*"/>
                <DataGridTextColumn Header="Адрес проживания" Binding="{Binding ResidentialAddress}" Width="*"/>
                <DataGridTextColumn Header="Уровень образования" Binding="{Binding EducationalLevel}" Width="*"/>
                <DataGridTextColumn Header="Программа обучения" Binding="{Binding ProgramType}" Width="*"/>-->
                <DataGridTextColumn Header="Код обучения" Binding="{Binding ProgramTypeCode}" Width="*"/>
                <DataGridTextColumn Header="Форма обучения" Binding="{Binding EducationForm}" Width="*"/>
                <DataGridTextColumn Header="Статус заявки" Binding="{Binding ApplicationStatus}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="DeleteButton" Grid.Row="2" Content="Удалить" Click="DeleteButton_Click" Background="Red" Foreground="White" Height="35" FontWeight="Bold" Margin="10">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
