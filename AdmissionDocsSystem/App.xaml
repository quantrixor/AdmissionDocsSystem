<Application x:Class="AdmissionDocsSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AdmissionDocsSystem"
             StartupUri="Views/Windows/SignInWindow.xaml">
    <Application.Resources>
         
        <!--Admins Button-->
        <Style TargetType="Button" x:Key="AdminFunctionalButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#043c56"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
    </Application.Resources>
</Application>
